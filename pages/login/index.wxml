<view class="container">
  <view class="login-icon">
    <image class="login-img" src="/images/login.jpg"></image>
  </view>
  <view class="login-from">
    <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="/images/name.png"></image>
      <!-- <label class="loginLab">账号</label> -->
      <input class="inputText" type="number" placeholder="请输入账号" bindinput="phoneInput" auto-focus></input>
    </view>
    <view class="line"></view>
    <!--密码-->
    <view class="inputView">
      <image class="nameImage" src="/images/key.png"></image>
      <!-- <label class="loginLab">密码</label> -->
      <input class="inputText" placeholder="请输入密码" bindinput="passwordInput" password="true"></input>
    </view>
    <view class="line"></view>
    <!--登录-->
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button>
    </view>
    <!--忘记密码-->
    <view>
      <view><navigator class="loginTabRe" url="../registered/index">快速注册</navigator></view>
      <view><navigator class="loginTabPass" url="../logs/logs">找回密码</navigator></view>
    </view>
  </view>
  <view class="bottom_footer">
    <label class="loginLab">@广东省湛江市徐闻县</label>
  </view>
</view>