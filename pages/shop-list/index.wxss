/* pages/shop-list/index.wxss */
page{
  background: #f3f7f7;
  height: 100%;
}

.page_box{
  width: 100%;
  height: 100%;
  background: #f3f7f7;
  overflow: hidden;
}

.input_view{
  width: 700rpx;
  height:150rpx;
  background: #fff;
  border-radius: 10rpx;
  padding: 40rpx;
}

.title{
  display: block;
  line-height: 30rpx;
  font-size:25rpx;
  color: #aaa;
}

.input_box{
  /* background: #ffc; */
  display: flex;
  padding: 20rpx 0;
  height: 50rpx;
  border-bottom: 1px solid #efefef;
}

.input_label{
  font-size: 45rpx;
  color: blue;
  /* font-weight: bold; */
  /* margin-right: 5rpx; */
}

.content{
  font-size: 40rpx;
  line-height: 50rpx;
  /* font-weight: bold; */
}

.text-size {
  padding-top:5px;
  font-size: 30rpx;
  float: right;
  color: blue;
}

.key_box{
  overflow: hidden;
}

.keys{
  float: left;
  width: 250rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-left: 1px solid #eee;
  box-sizing: border-box;
  border-top: 1px solid #eee;
  background-color: #fff;
}

.border0{
  border-left: 0;
}

.bg_color{
  background: #fff;
}

input {
  border: 1px solid #3a3030;
  border-radius: 4px;
}